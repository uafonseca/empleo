        {{- form_label(form) -}}
        {{- form_widget(form) -}}
        {{- form_errors(form) -}}
    </div>
{% endblock %}

{% block _permiso_falta_llamado_atencion_row %}
    <div class="col-md-2 form-group {% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}">
        {{- form_widget(form) -}}
        {{- form_errors(form) -}}
        <button class="btn btn-primary hidden" id="btn_documento" type="button">Llenar Documento</button>
    </div>
{% endblock %}

{% block _permiso_falta_porcentaje_row %}
    <div class="{{ attr_class|default('col-md-1') }} form-group {% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}">
        {{- form_label(form) -}}
        <div class="row">
            <div class="col-md-8">
