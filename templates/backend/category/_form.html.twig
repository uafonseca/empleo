{% form_theme form 'bootstrap_4_layout.html.twig' %}
{{ form_start(form) }}

    <div class="row">
        <div class="col-3">{{ form_row(form.name) }}</div>
        <div class="col-3">{{ form_row(form.ico) }}</div>
        <div class="col-6">{{ form_row(form.description) }}</div>

    </div>


    <button type="submit" class="btn btn-success btn-icon-split mb-4">
                            <span class="icon text-white-50">
                              <i class="fas fa-check"></i>
                            </span>
        <span class="text">{{ button_label|default('Guardar') }}</span>
    </button>
{{ form_end(form) }}
