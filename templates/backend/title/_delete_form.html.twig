<form method="post" action="{{ path('title_delete', {'id': title.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ title.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash"></i> Eliminar</button>
</form>
