<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    {% block metadata %}{% endblock %}
    {{
      encore_entry_link_tags("app")
    }}
    {{
      encore_entry_link_tags("backend_layout")
    }}
    {% block stylkes %} {% set img =
    asset('build/backend/images/backend/ilustration.svg') %}
    <style>
      .card-image::before {
        content: "";
        background-image: url("{{ img }}");
        background-size: cover;
        position: absolute;
        top: 0px;
        right: 0px;
        bottom: 0px;
        left: 0px;
        opacity: 0.15;
      }

      .span-empleo {
        background-color: #218838;
        padding: 4px;
        margin: 5px;
        border-radius: 3px;
        font-size: small;
        color: white;
      }
    </style>
    {% endblock %}
    <title>Bendito trabajo | {% block title %}{% endblock %}</title>
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      {% block nav %}
      <ul
        class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion"
        id="accordionSidebar"
      >
        <!-- Sidebar - Brand -->
        <a
          class="sidebar-brand d-flex align-items-center justify-content-center"
          href="{{ path('homepage') }}"
        >
          <div class="sidebar-brand-icon rotate-n-15">
            <i class="fas fa-search"></i>
          </div>
          <div class="sidebar-brand-text mx-3">Bendito trabajo</div>
        </a>

        <!-- Divider -->
        <hr class="sidebar-divider my-0" />

        <!-- Nav Item - Dashboard -->
        <li class="nav-item active">
          <a class="nav-link" href="{{ path('backend') }}">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span> Dashboard </span>
          </a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider" />

        <!-- Heading -->
        <div class="sidebar-heading">Configuración</div>

        <!-- Nav Item - Pages Collapse Menu -->
        <li class="nav-item">
          <a
            class="nav-link collapsed"
            href="#"
            data-toggle="collapse"
            data-target="#collapseTwo"
            aria-expanded="true"
            aria-controls="collapseTwo"
          >
            <i class="fas fa-list-alt"></i>
            <span> Categorías </span>
          </a>
          <div
            id="collapseTwo"
            class="collapse"
            aria-labelledby="headingTwo"
            data-parent="#accordionSidebar"
          >
            <div class="bg-white py-2 collapse-inner rounded">
              <h6 class="collapse-header">Acciones</h6>
              <a class="collapse-item" href="{{ path('category_new') }}">
                Adicionar
              </a>
              <a class="collapse-item" href="{{ path('category_index') }}">
                Listado
              </a>
            </div>
          </div>
        </li>

        <!-- Nav Item - Utilities Collapse Menu -->
        <li class="nav-item">
          <a
            class="nav-link collapsed"
            href="#"
            data-toggle="collapse"
            data-target="#collapseUtilities"
            aria-expanded="true"
            aria-controls="collapseUtilities"
          >
            <i class="fas fa-briefcase"></i>
            <span> Trabajos </span>
          </a>
          <div
            id="collapseUtilities"
            class="collapse"
            aria-labelledby="headingUtilities"
            data-parent="#accordionSidebar"
          >
            <div class="bg-white py-2 collapse-inner rounded">
              <h6 class="collapse-header">Acciones:</h6>
              <a class="collapse-item" href="{{ path('job_index') }}">
                Listado
              </a>
            </div>
          </div>
        </li>

        <!-- Nav Item - Utilities Collapse Menu -->
        <li class="nav-item">
          <a
            class="nav-link collapsed"
            href="#"
            data-toggle="collapse"
            data-target="#titles"
            aria-expanded="true"
            aria-controls="titles"
          >
            <i class="fas fa-graduation-cap"></i>
            <span> Títulos </span>
          </a>
          <div
            id="titles"
            class="collapse"
            aria-labelledby="headingUtilities"
            data-parent="#accordionSidebar"
          >
            <div class="bg-white py-2 collapse-inner rounded">
              <h6 class="collapse-header">Acciones:</h6>
              <a class="collapse-item" href="{{ path('title_new') }}">
                Adicionar
              </a>
              <a class="collapse-item" href="{{ path('title_index') }}">
                Listado
              </a>
            </div>
          </div>
        </li>

        <!-- Nav Item - Utilities Collapse Menu -->
        <li class="nav-item">
          <a
            class="nav-link collapsed"
            href="#"
            data-toggle="collapse"
            data-target="#profesions"
            aria-expanded="true"
            aria-controls="profesions"
          >
            <i class="fas fa-tasks"></i>
            <span> Profesiones </span>
          </a>
          <div
            id="profesions"
            class="collapse"
            aria-labelledby="headingUtilities"
            data-parent="#accordionSidebar"
          >
            <div class="bg-white py-2 collapse-inner rounded">
              <h6 class="collapse-header">Acciones:</h6>
              <a class="collapse-item" href="{{ path('profession_new') }}">
                Adicionar
              </a>
              <a class="collapse-item" href="{{ path('profession_index') }}">
                Listado
              </a>
            </div>
          </div>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider" />

        <!-- Heading -->
        <div class="sidebar-heading">Diseño</div>

        <li class="nav-item">
          <a
            class="nav-link collapsed"
            href="#"
            data-toggle="collapse"
            data-target="#slides"
            aria-expanded="true"
            aria-controls="slides"
          >
            <i class="fas fa-file-word"></i>
            <span> Banners </span>
          </a>
          <div
            id="slides"
            class="collapse"
            aria-labelledby="headingPages"
            data-parent="#accordionSidebar"
          >
            <div class="bg-white py-2 collapse-inner rounded">
              <a class="collapse-item" href="{{ path('slide_index') }}">
                Listado
              </a>
            </div>
          </div>
        </li>
        <hr class="sidebar-divider" />
        <li class="nav-item">
          <a
            class="nav-link collapsed"
            href="#"
            data-toggle="collapse"
            data-target="#consultas"
            aria-expanded="true"
            aria-controls="collapsePages"
          >
            <i class="fas fa-file-word"></i>
            <span> Consultas </span>
          </a>
          <div
            id="consultas"
            class="collapse"
            aria-labelledby="headingPages"
            data-parent="#accordionSidebar"
          >
            <div class="bg-white py-2 collapse-inner rounded">
              <a
                class="collapse-item"
                href="{{ path('consulta_index', { type: 'company' }) }}"
              >
                Empresas
              </a>
            </div>
            <div class="bg-white py-2 collapse-inner rounded">
              <a
                class="collapse-item"
                href="{{ path('consulta_index', { type: 'user' }) }}"
              >
                Usuarios
              </a>
            </div>
          </div>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider" />

        <!-- Heading -->
        <div class="sidebar-heading">Paquetes</div>

        <!-- Nav Item - Pages Collapse Menu -->
        <li class="nav-item">
          <a
            class="nav-link collapsed"
            href="#"
            data-toggle="collapse"
            data-target="#collapsePages"
            aria-expanded="true"
            aria-controls="collapsePages"
          >
            <i class="fas fa-file-word"></i>
            <span> Empleos </span>
          </a>
          <div
            id="collapsePages"
            class="collapse"
            aria-labelledby="headingPages"
            data-parent="#accordionSidebar"
          >
            <div class="bg-white py-2 collapse-inner rounded">
              <a
                class="collapse-item"
                href="{{ path('payment_for_jobs_new') }}"
              >
                Adicionar
              </a>
              <a
                class="collapse-item"
                href="{{ path('payment_for_jobs_index') }}"
              >
                Listado
              </a>
            </div>
          </div>
        </li>

        <hr class="sidebar-divider" />

        <!-- Heading -->
        <div class="sidebar-heading">Reportes</div>

        <!-- Nav Item - Pages Collapse Menu -->
        <li class="nav-item">
          <a
            class="nav-link collapsed"
            href="#"
            data-toggle="collapse"
            data-target="#reportes"
            aria-expanded="true"
            aria-controls="reportes"
          >
            <i class="fas fa-file-word"></i>
            <span> Reportes </span>
          </a>
          <div
            id="reportes"
            class="collapse"
            aria-labelledby="headingPages"
            data-parent="#accordionSidebar"
          >
            <div class="bg-white py-2 collapse-inner rounded">
              <a class="collapse-item" href="{{ path('report_index') }}">
                Ventas
              </a>
              <a class="collapse-item" href="{{ path('report_jobs') }}">
                Publicaciones
              </a>
            </div>
          </div>
        </li>

        <div class="sidebar-heading">Página web</div>

        <li class="nav-item">
          <a
            class="nav-link collapsed"
            href="#"
            data-toggle="collapse"
            data-target="#staticPages"
            aria-expanded="true"
            aria-controls="staticPages"
          >
            <i class="fas fa-sitemap"></i>
            <span> Páginas estáticas </span>
          </a>
          <div
            id="staticPages"
            class="collapse"
            aria-labelledby="headingPages"
            data-parent="#accordionSidebar"
          >
            <div class="bg-white py-2 collapse-inner rounded">
              <a class="collapse-item" href="{{ path('policy_new') }}">
                Términos & condiciones
              </a>
              <a class="collapse-item" href="{{ path('static_page_index') }}">
                Páginas
              </a>
            </div>
          </div>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider d-none d-md-block" />

        <!-- Sidebar Toggler (Sidebar) -->
        <div class="text-center d-none d-md-inline">
          <button class="rounded-circle border-0" id="sidebarToggle"></button>
        </div>
      </ul>
      {% endblock %}
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          {% block header %}
          <nav
            class="
              navbar navbar-expand navbar-light
              bg-white
              topbar
              mb-4
              static-top
              shadow
            "
          >
            <!-- Sidebar Toggle (Topbar) -->
            <button
              id="sidebarToggleTop"
              class="btn btn-link d-md-none rounded-circle mr-3"
            >
              <i class="fa fa-bars"></i>
            </button>

            <!-- Topbar Navbar -->
            <ul class="navbar-nav ml-auto">
              <!-- Nav Item - Alerts -->
              <li class="nav-item dropdown no-arrow mx-1">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  id="messagesDropdown"
                  role="button"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  <i class="fas fa-bell fa-fw"></i>
                  <!-- Counter - Messages -->
                  {# <span class="badge badge-danger badge-counter">7</span> #}
                </a>
                <!-- Dropdown - Messages -->
                <div
                  class="
                    dropdown-list dropdown-menu dropdown-menu-right
                    shadow
                    animated--grow-in
                  "
                  aria-labelledby="messagesDropdown"
                >
                  <h6 class="dropdown-header">Notificaciones</h6>
                  <div id="notifications-container">
                    <div class="text-center">
                      <i class="fas fa-spinner fa-spin fa-3x mt-5 mb-5"></i>
                    </div>
                  </div>
                  <a
                    class="dropdown-item text-center small text-gray-500"
                    href="{{ path('notification_list') }}"
                  >
                    Ver todas
                  </a>
                </div>
              </li>

              <div class="topbar-divider d-none d-sm-block"></div>

              <!-- Nav Item - User Information -->
              <li class="nav-item dropdown no-arrow">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  id="userDropdown"
                  role="button"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                    {{ app.user.name ? app.user.name : app.user.email }}
                  </span>
                  <img
                    class="img-profile rounded-circle"
                    src="{{ vich_uploader_asset(app.user, 'imageFile') }}"
                  />
                </a>
                <!-- Dropdown - User Information -->
                <div
                  class="
                    dropdown-menu dropdown-menu-right
                    shadow
                    animated--grow-in
                  "
                  aria-labelledby="userDropdown"
                >
                  <a class="dropdown-item" href="#">
                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                    Profile
                  </a>
                  <a class="dropdown-item" href="#">
                    <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                    Settings
                  </a>
                  <a class="dropdown-item" href="#">
                    <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                    Activity Log
                  </a>
                  <div class="dropdown-divider"></div>
                  <a
                    class="dropdown-item"
                    href="#"
                    data-toggle="modal"
                    data-target="#logoutModal"
                  >
                    <i
                      class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"
                    ></i>
                    Logout
                  </a>
                </div>
              </li>
            </ul>
          </nav>
          {% endblock %}
          <div class="container-fluid">{% block context %}{% endblock %}</div>
        </div>
        <footer class="sticky-footer bg-white">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>
                Copyright &copy; Benditotrabajo.com
                {{ 'now'|date('Y') }}
              </span>
            </div>
          </div>
        </footer>
      </div>
    </div>

    <!-- Logout Modal -->
    <div
      class="modal fade"
      id="logoutModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
            <button
              class="close"
              type="button"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true"> × </span>
            </button>
          </div>
          <div class="modal-body">
            Select "Logout" below if you are ready to end your current session.
          </div>
          <div class="modal-footer">
            <button
              class="btn btn-secondary"
              type="button"
              data-dismiss="modal"
            >
              Cancelar
            </button>
            <a
              class="btn btn-primary"
              href="{{ path('fos_user_security_logout') }}"
            >
              Salir
            </a>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
      integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    {{ encore_entry_script_tags("app") }}
    {{ encore_entry_script_tags("backend_layout") }}
    {{ encore_entry_script_tags("custon") }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{
        asset('bundles/fosjsrouting/js/fos_js_routing.js')
      }}"></script>
    {{ include("backend/utiles/flashBagComponent.html.twig") }}
    {% block scripts %}{% endblock %}
  </body>
</html>
