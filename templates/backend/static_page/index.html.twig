{% extends 'backend/base.html.twig' %}

{% block title %}StaticPage index{% endblock %}

{% block context %}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <h6 class="m-0 font-weight-bold text-primary col-6">Páginas</h6>
                <div class="col-6">
                    <a href="{{ path('static_page_new') }}" class="btn btn-primary float-right"><i class="fas fa-plus"></i> Nueva</a>
                </div>
            </div>
        </div>
        <div class="card-body">

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Actualización</th>
                    <th>Contenido</th>
                    <th>Tipo</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for static_page in static_pages %}
                    <tr>
                        <td>{{ static_page.updateAt ? static_page.updateAt|date('Y-m-d') : '' }}</td>
                        <td>{{ static_page.context | easyadmin_truncate(200)| raw }}</td>
                        <td>{{ static_page.type }}</td>
                        <td class="text-center">
                            <a href="{{ path('static_page_show', {'id': static_page.id}) }}"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('static_page_edit', {'id': static_page.id}) }}"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>



        </div>
    </div>


{% endblock %}
