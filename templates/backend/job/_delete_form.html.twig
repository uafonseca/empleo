<form method="post" action="{{ path('job_delete_backend', {'id': job.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job.id) }}">
    <button class="btn btn-danger mt-2"><i class="fas fa-trash"></i> Eliminar</button>
</form>
