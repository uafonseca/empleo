{% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
<div class="dashboard-sidebar">
    <div class="user-info">
        <div class="thumb">
            {% if app.user.image is not null %}
                <img src="{{ asset('images/user/')~ app.user.image }}" class="img-fluid" alt="">
            {% else %}
                <img src="{{ asset('images/default/not_image_user.png') }}" class="img-fluid" alt="">
            {% endif %}
        </div>
        <div class="user-body">
            <h5>{{ app.user.name }}</h5>
            <span>@{{ app.user.username }}</span>
        </div>
    </div>
    <div class="profile-progress">
        <div class="progress-item">
            <div class="progress-head">
                <p class="progress-on">Perfil</p>
            </div>
            <div class="progress-body">
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="{{ app.user.porcent }}" aria-valuemin="0" aria-valuemax="100" style="width: 0;"></div>
                </div>
                <p class="progress-to">{{ app.user.porcent }}%</p>
            </div>
        </div>
    </div>
    <div class="dashboard-menu">
        <ul>

            <li class="{% if currentPath == '/dashboard' %}active{% endif %}"><i class="fas fa-home"></i><a href="{{ path('dashboard') }}">Tablero</a></li>
            <li class="{% if currentPath == '/dashboard/edit' %}active{% endif %}"><i class="fas fa-user"></i><a href="{{ path('dashboard_edit') }}">Editar perfil</a></li>
            <li class="{% if currentPath == '/dashboard/resume' %}active{% endif %}"><i class="fas fa-file-alt"></i><a href="{{ path('dashboard_resume') }}">Curriculum Vitae</a></li>
            <li class="{% if currentPath == '/dashboard/resume/edit' %}active{% endif %}"><i class="fas fa-edit"></i><a href="{{ path('dashboard_resume_edit') }}">Editar Curriculum Vitae</a></li>
            <li class="{% if currentPath == '/dashboard/bookmarked' %}active{% endif %}"><i class="fas fa-heart"></i><a href="{{ path('dashboard_bookmarked') }}">Marcados</a></li>
            <li class="{% if currentPath == '/dashboard/applied' %}active{% endif %}"><i class="fas fa-check-square"></i><a href="{{ path('dashboard_applied') }}">Aplicados</a></li>
            {#<li class="{% if currentPath == '/dashboard' %}{% endif %}"><i class="fas fa-comment"></i><a href="dashboard-message.html">Mensajes</a></li>#}
            {#<li class="{% if currentPath == '/dashboard' %}{% endif %}"><i class="fas fa-calculator"></i><a href="dashboard-pricing.html">Plan de precios</a></li>#}
        </ul>
        <ul class="delete">
            <li><i class="fas fa-power-off"></i><a href="/logout">Salir</a></li>
            <li><i class="fas fa-trash-alt"></i><a href="#" data-toggle="modal" data-target="#modal-delete">Eliminar perfil</a></li>
        </ul>
        <!-- Modal -->
        <div class="modal fade modal-delete" id="modal-delete" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <h4><i data-feather="trash-2"></i>Eliminar perfil</h4>
                        <p>¿Estás seguro?, ¿Desea eliminar su perfil?. ¡Esto no se puede deshacer!</p>
                        <form action="#">
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Contraseña">
                            </div>
                            <div class="buttons">
                                <button class="delete-button">Eliminar</button>
                                <button class="">Cancelar</button>
                            </div>
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" checked="">
                                <label class="form-check-label">Acepta nuestra nuestros <a href="#">Términos y condiciones</a> y <a href="#">Política de privacidad</a></label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>