                                            <div class="form-group shadow-textarea">
                                                <label for="exampleFormControlTextarea6"></label>
                                                {{ form_widget(form.description, { 'attr': {'class': 'form-control z-depth-1','placeholder':'Descripción del trabajo'} }) }}
