    {#{{ form_start(form) }}#}
    {#{{ form_widget(form) }}#}
    {#{{ form_end(form) }}#}
    <div class="alice-bg section-padding-bottom">
        <div class="container no-gliters">
            <div class="row no-gliters">
                <div class="col">
                    <div class="post-container">
                        <div class="post-content-wrapper">
                            {{ form_start(form, {attr: {'class': 'job-post-form','id':'job-form'} }) }}
                                <div class="basic-info-input">
                                    <h4><i data-feather="plus-circle"></i>Publicar un empleo</h4>
                                    <div id="job-title" class="form-group row">
                                        <label class="col-md-3 col-form-label">Título</label>
                                        <div class="col-md-9">
                                            {{ form_widget(form.title, { 'attr': {'class': 'form-control','placeholder':'Tu título de trabajo aquí'} }) }}
                                            <span class="error text-danger">{{ form_errors(form.title) }}</span>
                                        </div>
                                    </div>
                                    <div id="logo" class="form-group row">
                                        <label class="col-md-3 col-form-label">Logo</label>
                                        <div class="col-md-9">
                                            {{ form_widget(form.imageFile, { 'attr': {'class': 'form-control','placeholder':'Seleccione el logo de su empresa'} }) }}
                                            <span class="error text-danger">{{ form_errors(form.imageFile) }}</span>
                                        </div>
                                    </div>
                                    <div id="job-summery" class="row">
                                        <label class="col-md-3 col-form-label">Resumen de trabajo</label>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        {{ form_widget(form.category, { 'attr': {'class': 'form-control'} }) }}
                                                        <span class="error text-danger">{{ form_errors(form.category) }}</span>
                                                        <i class="fa fa-caret-down"></i>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        {{ form_widget(form.localtion, { 'attr': {'class': 'form-control','placeholder':'Ubicación de trabajo'} }) }}
                                                        <span class="error text-danger">{{ form_errors(form.localtion) }}</span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        {{ form_widget(form.type, { 'attr': {'class': 'form-control'} }) }}
                                                        <span class="error text-danger"> {{ form_errors(form.type) }}</span>
                                                        <i class="fa fa-caret-down"></i>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        {{ form_widget(form.experience, { 'attr': {'class': 'form-control'} }) }}
                                                        <span class="error text-danger">{{ form_errors(form.experience) }}</span>
                                                        <i class="fa fa-caret-down"></i>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        {{ form_widget(form.salary_min, { 'attr': {'id': 'min','class': 'form-control','placeholder':'Salario mínimo'} }) }}
                                                        <span class="error text-danger">{{ form_errors(form.salary_min) }}</span>
                                                    </div>
                                                </div><div class="col-md-3">
                                                    <div class="form-group">
                                                        {{ form_widget(form.salary_max, { 'attr': {'class': 'form-control','placeholder':'Salario máximo'} }) }}
                                                        <span class="error text-danger">{{ form_errors(form.salary_max) }}</span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        {{ form_widget(form.qualification, { 'attr': {'class': 'form-control'} }) }}
                                                        <span class="error text-danger">{{ form_errors(form.qualification) }}</span>
                                                        <i class="fa fa-caret-down"></i>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group datepicker">
                                                        {{ form_widget(form.date, { 'attr': {'class': 'form-control'} }) }}
                                                        <span class="error text-danger">{{ form_errors(form.date) }}</span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group datepicker">
