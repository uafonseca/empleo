{% block headerScript %}
  <script src="https://pay.payphonetodoesposible.com/api/button/js?appId={{ package.identificador }}"></script>
  <script>
    window.onload = function() { payphone.Button({
      token:"{{ package.token }}",
      btnHorizontal: true,
      btnCard: true,
      createOrder: function(actions){
        return actions.prepare({
          amount: {{ package.price }},
          amountWithoutTax: {{ package.price }},
          currency: 'USD',
          clientTransactionId: '{{ transaction.code }}'  
        });
      },
      onComplete: function(model, actions){
        actions.confirm({ 
          id: model.id, 
          clientTxId: model.clientTxId
        }).then(function(value){
          if (value.transactionStatus == 'Approved')
          { 
            alert('Pago ' + value.transactionId + ' recibido, estado ' + value.transactionStatus ); 
          }
        }).catch(function(err){ console.log(err); });

        } }).render('#pp-button');

    }
  </script>
{% endblock %}
