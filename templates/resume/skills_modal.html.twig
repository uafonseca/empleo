{% form_theme form 'resume/theme.html.twig' %}
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-12">
                <h5 class="panel-title pull-left">
                  Creatividad
                </h5>
              </div>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="panel-body">
          {{ form_start(form) }}
          {{ form_row(form.skils) }}
          <button type="submit" class="btn btn-success mt-5">
            <i class="fa fa-save"></i> Guardar
          </button>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function () { $('.skils-collection').collection({ add: `<a class="btn btn-primary"
    href="#">
    <i class="fa fa-plus mt-2"></i> Adicionar
  </a>`, allow_up: false, allow_down: false, allow_duplicate: false,
  add_at_the_end: true, buttonLabel: 'Adicionar', name_prefix:
  'user_skills[skils]', }); })
</script>
