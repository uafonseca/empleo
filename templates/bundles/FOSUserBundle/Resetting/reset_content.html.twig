{% extends 'FOSUserBundle::layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block content %}
    <div class="top-content">
        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 text texto-info-cortex">
                        <h1><strong>Class Room</strong> Gestión Escolar</h1>
                        <div class="description">
                            <p>
                                Classroom es un entorno virtual intuitivo y amigable para docentes,
                                estudiantes y personal administrativo diseñado para facilitar los
                                procesos de aprendizaje y comunicación a través del intercambio
                                de contenidos e información.</p>
                        </div>
                    </div>
                    <div class="col-sm-4 form-box">
                        <div class="form-top">
                            <div class="form-top-left text-center">
                                <h3>Nueva Clave de Acceso</h3>
                            </div>
                            <div class="form-top-right">
                                <span style="color: #428bca"><i class="fa fa-unlock"></i></span>
                            </div>
                        </div>
                        <div class="form-bottom" style="padding: 5px 25px 40px 25px">
                            {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'login-form fos_user_resetting_reset' } }) }}

                            <div class="form-group">
                                <label>Nueva Contraseña *</label>
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-password'}}) }}
                            </div>
                            <div class="form-group">
                                <label>Repita la Contraseña *</label>
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-password'}}) }}
                            </div>
                            <button type="submit" class="btn"><i class="fa fa-angle-double-right"></i>
                                <strong>Cambiar Contraseña!</strong>
                            </button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}